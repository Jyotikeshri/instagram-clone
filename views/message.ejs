<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/assets/instagram.png" />
    <title>Followers</title>

    <!-- <link rel="stylesheet" href="/css/profile.css" /> -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Salsa&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0"
    />

    <link rel="stylesheet" href="/followers.css" />
    <!-- <style>
      .material-symbols-rounded {
        font-variation-settings: "FILL" 0, "wght" 400, "GRAD" 0, "opsz" 24;
      }
    </style> -->
    <style>
      .main {
        overflow-x: hidden;
      }
      h2 {
        color: white;
        height: 70px;
        width: 1470px;
        position: relative;
        left: 400px;
        text-align: center;
        font-size: 35px;
        border-bottom: 1px solid rgb(54, 54, 54);
        z-index: 10;
      }
      .fa-pen-to-square {
        position: relative;
        z-index: 10;
        color: white;
        font-size: 20px;
      }
      .new {
        width: 100px;
        height: 50px;
        background-color: transparent !important;
        position: relative;
        border: none;
        left: 200px;
        top: 50px;
        cursor: pointer;
        opacity: 0.7;
      }
      .new:hover {
        opacity: 1;
      }
      .msg {
        width: 1400px;
        height: 70px;

        padding-left: 60px;
        background-color: rgb(20, 20, 20);
        border-radius: 20px;
        margin: 10px;

        color: white;
        cursor: pointer;
      }

      .msg:hover {
        opacity: 0.7;
      }
      .all-msg {
        margin-top: 130px;
        position: relative;
        left: 300px;
      }

      .all-msg button {
        background-color: transparent;
        border: none;
        margin: 0;
      }
      .msg img {
        width: 50px;
        height: 50px;
        border-radius: 100%;
        position: relative;
        top: 8px;
        left: -680px;
      }
      .msg p {
        position: relative;
        top: -45px;
        left: -599px;
        font-weight: 700;
        font-size: 15px;
      }
    </style>
  </head>
  <body>
    <div class="main">
      <div class="sidebar">
        <div class="ab">
          <div class="ab1">
            <div class="ab12">
              <div class="ab121">
                <a href="">Instagram</a>
              </div>
            </div>
            <div class="ab13">
              <form action="/posts/<%= user._id %>" method="get">
                <div class="ab131">
                  <button type="submit">
                    <a href="/posts/<%= user._id %>">
                      <!-- <img
                        class="nav-icon1"
                        src="/assets/icons8-home-50.png"
                        alt="home"
                      /> -->

                      <div class="home">
                        <i class="fa-solid fa-house" style="color: #ffffff"></i
                        >Home
                      </div></a
                    >
                  </button>
                </div>
              </form>

              <div class="ab132 ab130">
                <a href="">
                  <!-- <img
                        class="nav-icon2"
                        src="/assets/search-icon.png"
                        alt="home"
                      /> -->
                  <div class="home search">
                    <i
                      class="fa-solid fa-magnifying-glass"
                      style="color: #ffffff"
                    ></i
                    >Search
                  </div></a
                >
              </div>
              <div class="ab133 ab130">
                <a href="">
                  <!-- <img
                        class="nav-icon3"
                        src="/assets/explore-icon.png"
                        alt="home"
                      /> -->
                  <div class="home explore">
                    <i class="fa-regular fa-compass" style="color: #ffffff"></i
                    >Explore
                  </div></a
                >
              </div>
              <div class="ab134 ab130">
                <a href="">
                  <!-- <img
                        class="nav-icon4"
                        src="/assets/reels-icon.png"
                        alt="home"
                      /> -->
                  <div class="home reels">
                    <i class="fa-solid fa-film" style="color: #ffffff"></i>Reels
                  </div></a
                >
              </div>
              <div class="ab135 ab130">
                <a href="">
                  <!-- <img
                        class="nav-icon5"
                        src="/assets/messages-icon.png"
                        alt="home"
                      /> -->
                  <div class="home mesaages">
                    <i
                      class="fa-regular fa-paper-plane"
                      style="color: #ffffff"
                    ></i
                    >Messages
                  </div></a
                >
              </div>

              <div class="ab137 ab130">
                <a href="/posts/<%= user._id %>/new">
                  <!-- <img
                        class="nav-icon7"
                        src="/assets/create-icon.png"
                        alt="home"
                      /> -->
                  <div class="home create">
                    <i
                      class="fa-solid fa-circle-plus"
                      style="color: #ffffff"
                    ></i
                    >Create
                  </div></a
                >
              </div>
              <div class="ab138 ab130">
                <a href="/posts/profile/<%= user._id %>">
                  <!-- <img
                        class="nav-icon8"
                        src="/assets/profile-icon.png"
                        alt=""
                      /> -->
                  <img src="<%=user.pfp %>" alt="" />
                  <div class="home">Profile</div>
                </a>
              </div>
            </div>
            <div class="ab14">
              <div class="ab130">
                <a href="">
                  <!-- <img
                        class="nav-icon9"
                        src="/assets/threads.png"
                        alt="home"
                      /> -->
                  <div class="home threads">
                    <i class="fa-brands fa-threads" style="color: #ffffff"></i
                    >Threads
                  </div></a
                >
              </div>
              <div class="ab130">
                <a href="">
                  <!-- <img
                        class="nav-icon10"
                        src="/assets/icons8-more-50.png"
                        alt="home"
                      /> -->
                  <div class="home more">
                    <i class="fa-solid fa-grip-lines" style="color: #ffffff"></i
                    >More
                  </div></a
                >
              </div>
            </div>
          </div>
        </div>
      </div>

      <form action="/message/new/<%= user._id%>">
        <button class="new" style="position: relative; left: 1600px">
          <i class="fa-solid fa-pen-to-square"></i>
        </button>
      </form>
      <div class="all-msg">
        <% for (let to of toUsers) { %>
        <form action="/msg/<%=to._id %>/<%=user._id %>">
          <button>
            <div class="msg">
              <!-- Access the corresponding user information using the loop index -->
              <img src="<%= to.pfp %>" alt="" />
              <p><%= to.username %></p>
            </div>
          </button>
        </form>
        <% } %>
      </div>
    </div>
    <script
      src="https://kit.fontawesome.com/726e005309.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
